<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background">
        <shape>
            <corners
                android:radius="10.0dip" />
            <solid
                android:color="#ffe0e0e0" />
        </shape>
    </item>
    <item
        android:id="@android:id/progress">
        <clip>
            <shape>
                <corners
                    android:radius="10.0dip" />
                <gradient
                    android:startColor="#ff3cc5be"
                    android:endColor="#ff4c58de"
                    android:angle="0.0" />
            </shape>
        </clip>
    </item>
</layer-list>